<div class="join">
    <h1>Join a room</h1>
    <div class="search">
        <form action="/join">
            <input type="text" class="searchbar" placeholder="Search rooms...">
            <button id="search-button"><img src="search.svg" alt="" width="20px"></button>
        </form>
    </div>
    <div class="rooms">
        <% rooms.forEach((room)=>{%>
            <div class="room">
                <div class="room-name"><%=room.name%></div>
                <div class="room-details">Users: <%=room.users.length%> </div>

                <button><a href="/room/<%=room.id%> ">Join</a></button></div>
        <% }) %> 
    </div>
</div>

<style>
    .join {
        background-color: var(--black);
        color: var(--text);
        padding: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }
    
    .search form {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }
    
    .searchbar {
        font-size: 20px;
        padding:7px 20px;
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
        border: none;
    }
    
    .searchbar:focus {
        outline: none;
        color: var(--black);
    }
    #search-button {
        background-color: var(--violet);
        padding: 9px;
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
        border: none;
        cursor: pointer;
    }

    h1 {
        font-size: 40px;
    }

    .search {
        margin: 40px;
    }

    .rooms {
        font-weight: 300;
        width: 90%;
        display: grid;
        grid-template-columns: repeat(auto-fill, 280px);
        grid-auto-rows: 220px;
    }

    .room {
        background-color: var(--overlay-grey);
        padding: 30px;
        margin: 20px;
        border-radius: 15px;
    }

    .room button {
        background-color: var(--violet);
        border: none;
        color: white;
        padding: 10px;
        text-align: center;
        font-size: 15px;
        border-radius: 5px;
        margin: 15px 2px;
        cursor: pointer;
    }
    
    .room-name {
        color: var(--white);
        margin-bottom: 10px;
    }
</style>